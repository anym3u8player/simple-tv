{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
  },
  "include": [
    "src-main/**/*",
    "vite.config.ts",
    "vite.main.config.ts"
  ]
}